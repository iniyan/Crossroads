{
    "name": "crossroads-player",
    "version": "1.0.0",
    "private": true,
    "license": "GPL-3.0-or-later",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
        "build": "vite build",
        "dist": "npm run build && electron-builder",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.crossroads.player",
        "productName": "Crossroads",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "assets/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.music",
            "icon": "assets/icon.png",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "assets/icon.png"
        }
    },
    "dependencies": {
        "date-fns": "^3.3.1",
        "electron-store": "^8.1.0",
        "lucide-react": "^0.309.0",
        "music-metadata": "^7.14.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^26.4.0",
        "vite": "^5.0.10",
        "wait-on": "^7.2.0"
    }
}